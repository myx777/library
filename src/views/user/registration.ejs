<%- include('../port/layout-start', { title: title }) %>
<%- include('../port/menu') %>

<form class="row g-3" action="/api/user/registration" method="post">
    <div class="col-md-4">
        <label for="validationServer01" class="form-label">Имя</label>
        <input type="text" class="form-control" id="validationServer01" value="" required placeholder="Иван" name="firstName">
    </div>
    <div class="col-md-4">
        <label for="validationServer02" class="form-label">Фамилия</label>
        <input type="text" class="form-control" id="validationServer02" value="" required placeholder="Иванович" name="secondName">
    </div>
    <div class="col-md-4">
        <label for="validationServerUsername" class="form-label">Username</label>
        <div class="input-group has-validation">
            <input name="username" type="text" class="form-control" id="validationServerUsername" aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" required placeholder="test">
        </div>
    </div>
    <div class="col-md-6">
        <label for="validationServer03" class="form-label">email</label>
        <input name="email" type="email" class="form-control" id="validationServer03" aria-describedby="validationServer03Feedback" required placeholder="пример@mail.com">
    </div>

    <div class="col-md-3">
        <label for="validationServer05" class="form-label">Придумайте пароль</label>
        <input name="password" type="password" class="form-control" id="validationServer05" aria-describedby="validationServer05Feedback" required placeholder="Введите пароль">
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Отправить</button>
    </div>
</form>

<%- include('../port/layout-end') %>

