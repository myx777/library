<%- include('../port/layout-start', { title: title }) %>
<%- include('../port/menu') %>

<h2><%= title %></h2>
<div class="row">
	<div class="card">
		<div class="card-body">
			<% for (let key in book) { %>
			<h4><%= key %>:</h4>
			<p><%= book[key] %></p>
			<% } %>
			<!-- Добавляем вывод значения счётчика просмотров -->
			<h4>Количество просмотров:</h4>
			<p><%= counter %></p>
		</div>
	</div>
</div>

<%- include('../port/layout-end') %>
