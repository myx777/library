<%- include('../port/layout-start', { title: title }) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>
<a class="btn btn-outline-primary" role="button" href="/api/books/create">Добавить книгу</a>

<% if(books.length) { %>
<table class="table table-striped table-sm mt-3">
	<thead>
	<tr>
		<th scope="col">#</th>
		<th scope="col">Название книги</th>
		<th scope="col">Действия</th>
	</tr>
	</thead>
	<tbody>
	
	<% books.map((el, idx) => { %>
	<tr>
		<th scope="row"><%= idx + 1 %></th>
		<td><%= el.title %></td>
		<td class="text-right">
			<a class="btn btn-sm btn-success" href="/api/books/view/<%= el._id %>">
				<i class="fa fa-eye" aria-hidden="true"></i>
			</a>
			<a class="btn btn-sm btn-primary" href="/api/books/update/<%= el._id %>">
				<i class="fa fa-pencil" aria-hidden="true"></i>
			</a>
			<form action="/api/books/<%= el._id %>" method="post" class="d-inline">
				<button class="btn btn-sm btn-danger">
					<i class="fa fa-trash" aria-hidden="true"></i>
				</button>
			</form>
		</td>
	</tr>
	<% }) %>
	
	</tbody>
</table>

<% } else { %>
<h3 class="mt-5">Записей пока нет</h3>
<% } %>

<%- include('../port/layout-end') %>
