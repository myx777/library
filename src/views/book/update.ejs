<%- include('../port/layout-start', { title: title }) %>
<%- include('../port/menu') %>

<h2><%= title %></h2>
<div class="row">
    <div class="card">
        <div class="card-body">
            <form method="post" class="mt-5">
                <div class="form-group">
                    <label for="inputTitle">Title</label>
                    <input type="text" value="<%= book.title %>" name="title" class="form-control" id="inputTitle">
                </div>
                <div class="form-group">
                    <label for="inputDescription">Description</label>
                    <input type="text" value="<%= book.description %>" name="description" class="form-control" id="inputDescription">
                </div>
                <div class="form-group">
                    <label for="inputAuthors">Authors</label>
                    <input type="text" value="<%= book.authors %>" name="authors" class="form-control" id="inputAuthors">
                </div>
                <div class="form-group">
                    <label for="inputFavorite">Favorite</label>
                    <input type="text" value="<%= book.favorite %>" name="favorite" class="form-control" id="inputFavorite">
                </div>
                <div class="form-group">
                    <label for="inputFileCover">File Cover</label>
                    <input type="text" value="<%= book.fileCover %>" name="fileCover" class="form-control" id="inputFileCover">
                </div>

                <!-- Добавьте другие поля здесь, если они есть в вашей модели -->
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>
